# Crys Garage Studio Environment Configuration

# API Configuration
VITE_API_URL=https://crysgarage.com/api

# Development API (uncomment for local development)
# VITE_API_URL=http://localhost:8000

# Authentication
VITE_AUTH_ENABLED=true

# Feature Flags
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_CREDITS=true
VITE_ENABLE_TIER_UPGRADES=true

# Dev Mode Configuration
# Set to 'true' to bypass authentication and payments during development
# WARNING: Only use in development environment!
VITE_DEV_MODE=false

# Analytics (optional)
# VITE_ANALYTICS_ID=your_analytics_id

# Error Reporting (optional)
# VITE_ERROR_REPORTING_URL=your_error_reporting_url
