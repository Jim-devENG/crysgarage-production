{
  "vps": {
    "host": "your-domain.com",
    "user": "root",
    "path": "/var/www/crysgarage",
    "port": 22
  },
  "services": {
    "python": {
      "port": 8002,
      "user": "www-data",
      "group": "www-data"
    },
    "frontend": {
      "port": 5173,
      "user": "www-data",
      "group": "www-data"
    },
    "nginx": {
      "port": 80,
      "ssl_port": 443
    }
  },
  "directories": {
    "frontend_build": "crysgarage-frontend/dist",
    "python_service": "audio-mastering-service",
    "backend": "crysgarage-backend",
    "storage": "storage/app/public/mastered"
  },
  "python_dependencies": [
    "fastapi==0.104.1",
    "uvicorn[standard]==0.24.0",
    "python-multipart==0.0.6",
    "aiofiles==23.2.1",
    "numpy==1.24.3",
    "soundfile==0.12.1",
    "scipy==1.11.4",
    "librosa==0.10.1",
    "pydub==0.25.1",
    "requests==2.31.0",
    "aiohttp==3.9.1",
    "python-dotenv==1.0.0",
    "Pillow==10.1.0",
    "opencv-python==4.8.1.78",
    "tensorflow==2.15.0",
    "torch==2.1.1",
    "torchaudio==2.1.1",
    "noisereduce==3.0.0"
  ],
  "security": {
    "enable_ssl": false,
    "enable_firewall": false,
    "cors_origins": ["*"],
    "security_headers": true
  },
  "backup": {
    "enabled": true,
    "path": "/tmp/crysgarage-backup",
    "retention_days": 7
  }
}
