# Audio Mastering Microservice Configuration

# Storage Configuration
STORAGE_TYPE=local  # 'local' or 's3'
LOCAL_STORAGE_PATH=/tmp/mastered_audio
S3_BUCKET=crysgarage-mastered-audio
S3_REGION=us-east-1

# Service Configuration
BASE_URL=http://localhost:8000
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=500
MAX_PROCESSING_TIME_SECONDS=300

# Laravel Integration
LARAVEL_API_URL=http://localhost:8000/api
LARAVEL_API_TOKEN=your_laravel_api_token_here

# Audio Processing
DEFAULT_TARGET_LUFS=-14.0
DEFAULT_SAMPLE_RATE=44100
DEFAULT_BIT_DEPTH=16

# ML Model Configuration
ML_MODEL_PATH=./models/
ENABLE_ADVANCED_ML=false

# Security
CORS_ORIGINS=["http://localhost:3000", "https://crysgarage.studio"]
API_KEY=your_api_key_here

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090


